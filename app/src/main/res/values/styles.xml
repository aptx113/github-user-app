<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomTextBadgeAppearance" parent="CustomTextAppearanceBody2">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomTextAppearanceBody2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomButtonAppearance" parent="TextAppearance.AppCompat.Widget.Button.Borderless.Colored">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
